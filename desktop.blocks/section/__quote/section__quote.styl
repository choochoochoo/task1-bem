.section__quote {
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 5vh;
    border-left: 5px solid #f9f0f0;
    margin: 0 auto;
    margin-top: 5vh;
    max-width: 470px;

    @media screen and (min-width: 0px) and (max-width: 480px) {
        width: 90%;
    }

    @media screen and (min-width: 481px) and (max-width: 800px) {

    }

    @media screen and (min-width: 801px) and (max-width: 1024px) {

        float: none;
        clear: none;
        position: static;
    }

    @media screen and (min-width: 1025px) {
        text-align: justify;
        width: 35%;
        margin: 0 auto;
        float: right;
        clear: both;
        position: absolute;
        right: 0px;
    }
}

